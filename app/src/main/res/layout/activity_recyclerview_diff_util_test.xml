<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".recyclerview.RecyclerviewDiffUtilTestActivity">

    <TextView
            android:id="@+id/recycleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recyclerview Test"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
    />
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/testRv"
            android:layout_width="match_parent"
                                               android:layout_height="0dp"
                                               app:layout_constraintTop_toBottomOf="@+id/recycleTv"
                                               app:layout_constraintBottom_toBottomOf="parent"
                                               android:layout_marginTop="10dp"
    ></androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>