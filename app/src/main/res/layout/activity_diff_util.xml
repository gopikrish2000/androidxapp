<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".recyclerview.diffUtil.DiffUtilTestActivity">

    <TextView
            android:id="@+id/diffIntroTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textColor="#142031"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
    />

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/diffRv"
            android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@+id/diffIntroTv"
                                               android:layout_marginTop="10dp"
    >

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>