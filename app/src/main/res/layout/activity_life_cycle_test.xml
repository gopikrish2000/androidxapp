<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".lifecycle.LifeCycleFirstActivity">

    <TextView
            android:id="@+id/align_ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Lifecycle Activity"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/firstBtn" android:text="Next" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/align_ss"
            android:layout_marginTop="8dp"
    />

    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp"
                 android:id="@+id/fragFrame" app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/firstBtn"

    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Frag Replace" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/fragReplaceBtn"
    />

</androidx.constraintlayout.widget.ConstraintLayout>